+  'generation',
+  async (job) => {
+    const { jobId, prompt, type } = job.data as {
+      jobId: string;
+      prompt: string;
+      type: AssetType;
+    };
+
+    await prisma.job.update({
+      where: { id: jobId },
+      data: { status: 'RUNNING' },
+    });
+
+    const result = await runMockProvider(type, prompt);
+
+    const updated = await prisma.job.update({
+      where: { id: jobId },
+      data: { status: 'SUCCEEDED', result },
+    });
